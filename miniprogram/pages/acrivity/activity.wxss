/* pages/acrivity/activity.wxss */
page{
  background-color:rgb(240,239,245);
}
.item{
  display: flex;
  height: 200rpx;
  width:96%;
  margin: 0 auto;
  margin-top: 30rpx;
  background-color: #f7dcd0;
  border-radius: 15rpx;
  box-shadow:5rpx 5rpx 5rpx 5rpx #E0E3DA;
}
.left{
  height: 100%;
  flex: 2;

}
.right{
  height: 100%;
  width: 100%;
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  font-size:40rpx;
  font-weight: 600;

}
.cover{
  width: 100%;
  height: 100%;
  border-radius: 15rpx 0 0 15rpx;
}