 <view style="height: 130rpx;line-height: 130rpx;display: flex;align-items: center;padding-left: 25px;padding-right: 25px;background-color: #d0ffcc;width: 80%;border-radius: 30rpx;margin-top: 20rpx;" wx:for="{{list}}" wx:key="id">
 <view style="margin-right: 40rpx;display: flex;align-items: center;">
   <image src="../../image/{{index+1}}.png" mode="" wx:if="{{index<=2}}" style="width: 70rpx;height: 70rpx;"/>
   <view wx:if="{{index>2}}" style="width: 70rpx;text-align: center;">{{index+1}}</view>
 </view>
<image src="{{item.photo}}" mode="" style="width: 60rpx;height: 60rpx;border-radius: 50%;margin-right: 50rpx;"/>
 <text style="margin-right: 30rpx;width: 190rpx;font-size: 28rpx;">{{item.nick_name}}</text>
 <text style="text-align: center;width: 150rpx;">{{item.integral}}积分</text>
 
 </view>


<view wx:if="{{isload}}" style="width: 100%;height: 150rpx;background-color: #f0fff0 ;position: fixed;bottom: 0;right: 0;display: flex;justify-content: center;z-index: 2;">
 <view style="display: flex;align-items: center;width: 95%;background-color: rgb(0, 128, 100);border-radius: 30rpx;height: 130rpx;padding-left: 30rpx;">
    <image src="../../image/{{index+1}}.png" mode="" wx:if="{{index<=2}}" style="width: 70rpx;height: 70rpx;"/>
   <view wx:if="{{index>2}}" style="width: 70rpx;text-align: center;">{{index+1}}</view>
 <image src="{{user.photo}}" mode="" style="width: 90rpx;height: 90rpx;margin-left: 80rpx;border-radius: 50%;" />
 <text style="margin-left: 80rpx">{{user.nick_name}}</text>
 <text style="margin-left: 150rpx;color: yellow;">{{user.integral}}</text>
 <text>积分</text>
 </view>
</view>