/* pages/overview/overview.wxss */
page{
  background-color: white;
}
.nav{
  display: flex;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 2;
  background-color: #fff;
}

/* pages/home/index.wxss */

.imageContainer {
  width: 100%;
  height: 400rpx;
  background-color: #f6f6f6;

}

.item {
  height:350rpx;
  display: flex;
  align-items: center;

}

.itemImg {
  
  width: 92%;
  height: 250rpx;
  border-radius: 15rpx;
  z-index: 5;
  opacity: 0.7;

  margin: 0 30rpx;
}

.active {
  opacity: 1;
  z-index: 10;
  height: 300rpx;
  top: 7%;
  transition: all .2s ease-in 0s ;
}
.point{
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: 3%;
  width: auto;
  height: 10rpx;
  display: flex;
}
.selected{
  width: 30rpx;
  height: 10rpx;
  border-radius: 5rpx;
  background-color: orange;
  margin-right: 10rpx;
}
.noselected{
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  background-color: grey;
  margin-right: 10rpx;
}
.content{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  align-items: center;

}
.con_item{
  margin-top: 30rpx;
  width: 42%;
  height: 200rpx;
  color: white;
  font-weight:800;
  line-height: 200rpx;
  text-align: center;
  border-radius: 30rpx;
  font-size: 50rpx;
  box-shadow: 4rpx 4rpx 4rpx 4rpx #d8dbd2;
}
